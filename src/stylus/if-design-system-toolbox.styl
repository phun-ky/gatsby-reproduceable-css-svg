.if.toolbox
  background-color $color-background-lightest-beige
  height 3rem
  display none
  align-items center
  justify-content flex-end
  position absolute
  left 0
  width calc(100% - 6pt)
  border-top 0.25rem solid $color-background-light-beige
  margin 0
  z-index $depth-z-index-popover
  +IDS_BREAKPOINT_MQ_Small_Min()
    display flex


.if.toolbox
  & a.if.preview
    margin-right auto
    height $size-48
    width auto
    display flex
    align-items center
    padding-left 3.25rem
    text-decoration none
    color $color-text-brown
    background-size $size-icon-24 $size-icon-24
    background-repeat no-repeat
    background-position left 1rem center


.if.toolbox
  & a.if.preview
    &::after,
    &::before
      content none


.if.types .if.toolbox
  & a.if.preview
    background-image url("data:image/svg+xml,%3Csvg xmlns=%27http://www.w3.org/2000/svg%27 viewBox=%270 0 32 32%27%3E%3Ctitle%3Epreview%3C/title%3E%3Cg class=%27nc-icon-wrapper%27 stroke-linecap=%27square%27 stroke-linejoin=%27miter%27 stroke-width=%271.5%27 fill=%27%23331e11%27 stroke=%27%23331e11%27%3E%3Cpath d=%27M1.409,17.182a1.936,1.936,0,0,1-.008-2.37C3.422,12.162,8.886,6,16,6c7.02,0,12.536,6.158,14.585,8.81a1.937,1.937,0,0,1,0,2.38C28.536,19.842,23.02,26,16,26S3.453,19.828,1.409,17.182Z%27 fill=%27none%27 stroke=%27%23331e11%27 stroke-miterlimit=%2710%27/%3E%3Ccircle data-color=%27color-2%27 cx=%2716%27 cy=%2716%27 r=%276%27 fill=%27none%27 stroke-miterlimit=%2710%27/%3E%3C/g%3E%3C/svg%3E")


