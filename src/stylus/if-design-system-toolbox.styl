.if.toolbox
  & .if.toolbox-menu-container,
  & .if.toolbox-background-container
    position relative
    width $size-48
    height $size-48


.if.toolbox
  & .if.toolbox-menu-container,
  & .if.toolbox-background-container
    & > .if.icon-button
      width $size-48
      height $size-48
      background-size $size-icon-24 $size-icon-24


.if.toolbox
  & > a
    &:hover,
    &.is-hovered
      cursor pointer
      color $color-interaction-dark-blue


.if.toolbox
  & .codepen
  & .codesandbox
  & .jsfiddle
  & .copy
    background-position left 1.5rem center
    background-repeat no-repeat
    background-size $size-20 $size-20
    padding-left 3.25rem


