code[class*="language-"],
pre[class*="language-"] {
  color: #F4F4F4;
  background: none;
  font-family: Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace;
  text-align: left;
  white-space: pre;
  word-spacing: normal;
  word-break: normal;
  word-wrap: normal;
  line-height: 1.5;

  -moz-tab-size: 2;
  -o-tab-size: 2;
  tab-size: 2;

  -webkit-hyphens: none;
  -moz-hyphens: none;
  -ms-hyphens: none;
  hyphens: none;
}

/* Code blocks */
pre[class*="language-"] {
  padding: 3rem 3rem;
  margin: 0;
  overflow: auto;
  border-radius: 4px;
}

pre[class*="language-"] {
  background: #192130;
}

:not(pre) > code[class*="language-"] {
  background: rgba(255, 224, 130, 0.3);
  padding: 0;
  border-radius: 0;
  white-space: normal;
  color: inherit;
}

.token.comment,
.token.prolog,
.token.doctype,
.token.cdata {
  color: #ffe082;
}

.token.punctuation {
  color: #D9D9D9;
}

.token.property,
.token.tag {
  color: #87B3C9;
}
.token.constant,
.token.symbol,
.token.deleted {
  color: #FF8F75;
}

.token.boolean,
.token.number {
  color: #97e2f7;
}

.token.selector,
.token.attr-name,
.token.string,
.token.char,
.token.builtin,
.token.inserted {
  color: #87c7ba;
}

.token.operator,
.token.entity,
.token.url,
.language-css .token.string,
.style .token.string,
.token.variable {
  color: #97e2f7;
}

.token.atrule,
.token.attr-value,
.token.function {
  color: #fcc74f;
}

.token.keyword {
  color: #97e2f7;
}

.token.regex,
.token.important {
  color: #fcc74f;
}

.token.important,
.token.bold {
  font-weight: bold;
}
.token.italic {
  font-style: italic;
}

.token.entity {
  cursor: help;
}

@media screen and (-ms-high-contrast: active) {
  code[class*="language-"],
  pre[class*="language-"] {
    color: windowText;
    background: window;
  }

  :not(pre) > code[class*="language-"],
  pre[class*="language-"] {
    background: window;
  }

  .token.important {
    background: highlight;
    color: window;
    font-weight: normal;
  }

  .token.atrule,
  .token.attr-value,
  .token.function,
  .token.keyword,
  .token.operator,
  .token.selector {
    font-weight: bold;
  }

  .token.attr-value,
  .token.comment,
  .token.doctype,
  .token.function,
  .token.keyword,
  .token.operator,
  .token.property,
  .token.string {
    color: highlight;
  }

  .token.attr-value,
  .token.url {
    font-weight: normal;
  }
}
