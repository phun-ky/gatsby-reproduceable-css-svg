
.sg.figure.caption {
  display: flex;
  width: 100%;
  margin: 0;
  padding: 0;
  margin-top: 1rem;
}

.sg.figure.caption.list {
  display: block;
  margin-top: 0;
  list-style-position: inside;
}

.sg.figure.caption.list.item {
  display: list-item;
  margin-top: 0;
}

.sg.figure.caption.list.item > ol{
  list-style-type: upper-latin;
  margin-left: 1rem;
  padding: 0;
  list-style-position: inside;
}

.sg.figure.caption.list.item > ol > li{
  padding: 0;
  margin: 0;
}

@media screen and (min-width: 960px) {
  .sg.figure.caption.list.item > ol{
    margin-left: 2.5rem;
  }
}
