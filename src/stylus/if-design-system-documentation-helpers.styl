@require '@ids-core/icons/src/variables/stylus/variables.styl'

.sg.browsers
  display grid
  padding $size-spacing-32
  grid-gap $size-spacing-32
  grid-template-columns repeat(auto-fit, minmax(3rem, 1fr))

.sg.browser.icon
  max-width 3rem
  height 3rem

.sg.section-npm-link,
.sg.section-npm-link:visited,
.sg.section-npm-link:hover
  margin-left $size-spacing-16 !important
  margin-bottom 0


.sg.section-npm-link::after
  content none !important

.sg.hidden
  clip rect(1px, 1px, 1px, 1px)
  height 0.0625rem
  margin 0
  overflow hidden
  position absolute
  width 0.0625rem

.sg.responsive
  border none
  height 100%
  width 100%

.sg.device-iphone, .sg.device-iphone.device-portrait
  width 375px

.sg.device-iphone.device-landscape
  width 667px

.sg.device-ipad, .sg.device-ipad.device-portrait
  width 768px

.sg.device-ipad.device-landscape
  width 1024px

.sg.device-mac
  width 1920px

.sg[class*="device-"] > div > *:not(.content)
  pointer-events none

.sg.arrow
  display block
  height 40vh
  width 2pt
  background-color $color-accent-blue
  position absolute
  left 15%
  top 50%
  z-index 1
  transform translateY(-50%)

.sg.arrow::after
  content ""
  width 0
  height 0
  border-left $size-spacing-12 solid transparent
  border-right $size-spacing-12 solid transparent
  border-bottom $size-spacing-12 solid $color-accent-blue
  position absolute
  top $size-spacing-12 * -1
  left 50%
  transform translateX(-50%)

.sg.arrow::before
  content ""
  width 0
  height 0
  border-left $size-spacing-12 solid transparent
  border-right $size-spacing-12 solid transparent
  border-top $size-spacing-12 solid $color-accent-blue
  position absolute
  top 100%
  left 50%
  transform translateX(-50%)

.sg.animation
  pointer-events initial !important

.sg.animation *
  animation-play-state running

.sg.animation:hover *
  animation-play-state paused

.sg.edit-link
