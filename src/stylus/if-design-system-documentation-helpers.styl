  margin-right 0.5rem





/* Helpers for floating action button component */


#back-to-top-animation2.if.back-to-top.is-visible
  animation ifKeyframesBackToTopAppearInBottom 2s cubic-bezier(0.390, 0.575, 0.565, 1.000) 0.2s infinite forwards

#back-to-top-animation4.if.back-to-top.is-visible
  animation ifKeyframesBackToTopAppearInBottom 2s cubic-bezier(0.390, 0.575, 0.565, 1.000) infinite forwards reverse



@keyframes ifKeyframesBackToTopAppearInBottom
  0%
    display none
    opacity 0
    bottom 0px
  25%
    display block
    opacity 0
    bottom 0px
  50%
    opacity 1
    bottom 64px
    display block
  75%
    display block
    opacity 1
    bottom 64px
  90%
    display block
    opacity 1
    bottom 64px
  91%
    display block
    opacity 0
    bottom 64px
  100%
    display none
    opacity 0
    bottom 64px


[class*="spacing-cube"].if
  white-space: nowrap;
  font-size: 12px;
  background-color: rgba(0,84,240, 0.15);
  color: #331e11;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 !important;
  position: absolute;
  width: auto;

[class*="spacing-cube"].if
  &::before
    content ""
    height 100%
    display block
    background-color $color-accent-blue
    position absolute
    left 0
    top 50%
    transform translateY(-50%)

.if.spacing-cube-16
  padding: 0 8px 0 calc(16px + 8px);
  height: 16px;
  &::before
    height $size-16
    width $size-16

.if.spacing-cube-24
  padding: 0 8px 0 calc(24px + 8px);
  height: 24px;
  &::before
    height $size-24
    width $size-24

.if.spacing-cube-24.left
  padding: 0 calc(24px + 8px) 0 8px;

  &::before
    left auto
    right 0

.if.spacing-cube-32
  padding: 0 8px 0 calc(32px + 8px);
  height: 32px;
  &::before
    height $size-32
    width $size-32

.if.spacing-cube-64
  padding: 0 8px 0 calc(64px + 8px);
  height: 64px;
  &::before
    height $size-64
    width $size-64
