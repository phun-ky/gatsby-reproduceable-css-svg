.sg.header.menu > li.is-parent > a,
.sg.header.menu > li.is-parent > button
  &:focus
    IDS_UTIL_PseudoStates_Focus()

.sg.header.menu > li.is-parent > a,
.sg.header.menu > li.is-parent > button
  &:focus:not(:focus-visible)
    outline none
    outline-offset 0

.sg.header.menu > li.is-parent > a,
.sg.header.menu > li.is-parent > button
  &:focus-visible
    IDS_UTIL_PseudoStates_Focus()
