.noat-cookie__consent
  z-index 950
  box-sizing border-box

  & *
    box-sizing border-box
    display flex
    align-items flex-start

.noat-cookie-consent__banner
  & .noat-cookie-consent-banner__text
    margin-right auto

.noat-cookie-consent__banner
  grid-gap 2rem
  display flex
  width 100%
  flex-direction column
  +IDS_BREAKPOINT_MQ_Smaller_Min()
    flex-direction row

.noat-cookie__consent
  &.is-answered
    display none
  box-sizing border-box
  position fixed
  height auto
  display flex
  align-items center
  IDS_UTIL_Padding_Horizontal()
  bottom 0
  width 100%
  padding-top $size-spacing-32
  padding-bottom $size-spacing-32
  background-color $color-text-brown
  color $color-text-lightest-beige
  & a,
  & a:visited,
  & a:hover,
  & a:active
    &:not(.button)
      color $color-text-lightest-beige

.noat-cookie-consent-banner-other-actions__privacy-policy.if.button.text,
.noat-cookie__consent .noat-cookie-consent-banner-other-actions__deny.if.button.text
    color $color-text-lightest-beige
    font-size $size-font-18
    margin 0

.noat-cookie__consent .noat-cookie-consent-banner__allow.if.button.secondary
    color $color-text-lightest-beige
    border-color $color-text-lightest-beige
    font-size $size-font-18
    margin 0
    align-self center
    +IDS_BREAKPOINT_MQ_Smaller_Min()
      align-self auto

.noat-cookie-consent-banner-other-actions__privacy-policy.if.button.text,
.noat-cookie__consent .noat-cookie-consent-banner-other-actions__deny.if.button.text,
.noat-cookie__consent .noat-cookie-consent-banner__allow.if.button.secondary
  &:active,
  &:hover
    color $color-accent-blue
    border-color $color-accent-blue
    box-shadow inset 0 0 0 1px $color-accent-blue


.noat-cookie-consent-banner__other-actions
  grid-gap 1rem
  display flex
  flex-direction column
  width 100%
  align-items center
  +IDS_BREAKPOINT_MQ_Smaller_Min()
    width auto
    flex-direction row
